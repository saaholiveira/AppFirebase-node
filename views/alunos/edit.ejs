<div class="card shadow-sm">
    <div class="card-body">
      <h1 class="h4 mb-3">Editar Aluno</h1>
      <form method="POST" action="/alunos/<%= id %>/edit" class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Nome</label>
          <input type="text" name="nome" value="<%= aluno.nome %>" class="form-control" required>
        </div>
        <div class="col-md-6">
          <label class="form-label">Email</label>
          <input type="email" name="email" value="<%= aluno.email %>" class="form-control" required>
        </div>
        <div class="col-12">
          <a href="/alunos" class="btn btn-outline-secondary">Cancelar</a>
          <button type="submit" class="btn btn-primary">Atualizar</button>
        </div>
      </form>
    </div>
  </div>